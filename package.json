  "scripts": {
    "bundlewatcher": "./setup-bundlewatcher.sh",
    "start": "(cp -n ./app/config/.env.example .env || true) && NODE_ENV=development webpack-dev-server --config ./webpack/webpack.config.dev.js",
    "start:remote": "(cp -n ./app/config/.env.example .env || true) && NODE_ENV=development webpack-dev-server --config ./webpack/webpack.config.dev-remote.js",
    "start:translate": "(cp -n ./app/config/.env.example .env || true) && NODE_ENV=development && NF_ENABLE_TRANSLATE_OVERLAY=1 webpack-dev-server --config ./webpack/webpack.config.translate.js",
    "build:prod": "(cp -n ./app/config/.env.example .env || true) && NODE_ENV=production webpack --config ./webpack/webpack.config.prod.js",
    "build:prod:prerender": "./scripts/prerender.sh",
    "build:translate": "(cp -n ./app/config/.env.example .env || true) && NODE_ENV=production && NF_ENABLE_TRANSLATE_OVERLAY=1 webpack --config ./webpack/webpack.config.prod.js",
    "bundle-analyzer": "(cp -n ./app/config/.env.example .env || true) && NODE_ENV=production webpack --config ./webpack/webpack.config.bundle-analyzer.js",
    "ganache": "./scripts/ganache-cli.sh",
    "format": "prettier --list-different '**/*.{ts,tsx,js,json,md,gql}'",
    "format:fix": "prettier --write '**/*.{ts,tsx,js,json,md,gql}'",
    "tslint:app": "tslint --project . --format stylish",
    "tslint": "yarn tslint:app",
    "tslint:fix": "concurrently -p \"[{name}]\" -n \"APP,SPEC\" -c \"bgGreen.bold,bgCyan.bold\" \"yarn tslint:app --fix\"",
    "tsc": "tsc --noEmit --project .",
    "sasslint": "sass-lint -c .sass-lint.yml -v -q",
    "lint": "yarn format && yarn tslint && yarn sasslint && yarn tsc && yarn intl:extract:check",
    "lint:fix": "concurrently -p \"[{name}]\" -n \"TSLINT/PRETTIER,SASS/TSC/INTL\" -c \"bgYellow.bold,bgMagenta.bold\" \"yarn tslint:fix && yarn format:fix\" \"yarn sasslint && yarn tsc && yarn intl:extract\"",
    "lint:fix:staged": "concurrently -p \"[{name}]\" -n \"TSC,LINT-STAGED\" -c \"bgYellow.bold,bgMagenta.bold\" \"yarn tsc\" \"lint-staged\"",
    "test:browser": "NODE_ENV=test mocha --require ts-node/register --require jsdom-global/register --require ./test/setupBrowserTests.ts './test/setupTestsHooks.ts' './app/**/*.spec.ts?(x)'",
    "test:browser:watch": "NODE_ENV=test mocha --require ts-node/register --require jsdom-global/register --require ./test/setupBrowserTests.ts --watch --watch-extensions ts,tsx './test/setupTestsHooks.ts' './app/**/*.spec.ts?(x)'",
    "test:browser-coverage": "NODE_ENV=test nyc mocha --require ts-node/register --require jsdom-global/register --require ./test/setupBrowserTests.ts 'test/setupTestsHooks.ts' './app/**/*.spec.ts?(x)'",
    "test:node": "NODE_ENV=test mocha --require ts-node/register --require ./test/setupTests.ts './app/**/*.spec.node.ts?(x)'",
    "test:node-coverage": "NODE_ENV=test nyc mocha --require ts-node/register --require ./test/setupTests.ts './app/**/*.spec.node.ts?(x)'",
    "test:e2e": "./e2e/setup-e2e.sh",
    "test:e2e:chrome": "./e2e/setup-chrome-e2e.sh",
    "test:e2e:cypress": "cypress run",
    "test:e2e:cypress:chrome": "cypress run --config testFiles=\"**/*.spec.e2e.chrome.ts\" --browser chrome",
    "test:e2e:cypress:record": "node ./cypress/cypress-retries.js --record --parallel",
    "test:e2e:cypress:retry:chrome": "node ./cypress/cypress-retries.js --record --parallel --chrome",
    "test:e2e:dev": "cypress open --config testFiles=\"**/*.spec.e2e.ts\"",
    "test": "yarn lint && yarn test:browser && yarn test:node && yarn test:e2e",
    "test:coverage": "yarn test:coverage-no-e2e && yarn test:e2e",
    "test:coverage-no-e2e": "yarn lint && yarn test:browser-coverage && yarn test:node",
    "test:fix": "yarn lint:fix && yarn test:browser && yarn test:node",
    "codecov": "codecov",
    "generate:contracts": "node ./scripts/generate-contracts.js",
    "prepare": "git submodule update --init --recursive && patch-package && yarn generate:contracts",
    "update-contract-artifacts": "git submodule update --recursive --remote",
    "intl:extract": "./scripts/extract-intl-messages.sh",
    "intl:extract:check": "./scripts/extract-intl-messages.sh --check",
    "storybook": "start-storybook -p 9001 -c .storybook -s ./app/assets",
    "storybook:screenshots": "storybook-chrome-screenshot --debug --inject-files ./.storybook/disables.js -p 9001 -c .storybook --browser-timeout 999999 -s ./app/assets",
    "deploy-storybook": "storybook-to-ghpages --out=storybook-static"
  },
